Pase-2.1-Konfigurasi_Mesin() {
	ln -sf /usr/share/zoneinfo/Asia/Jakarta /etc/localtime
	hwclock --systohc
	nano /etc/locale.gen
	locale-gen
	echo "LANG=en_US.UTF-8" >> /etc/locale.conf
	echo "KEYMAP=us" >> /etc/vconsole.conf
	echo "anarki" >> /etc/hostname
	echo "127.0.0.1 localhost" >> /etc/hosts
	echo "::1       localhost" >> /etc/hosts
	echo "127.0.1.1 anarki.localdomain anarki" >> /etc/hosts

	#printf "\e[1;32mMasukan Kata Sandi ROOT\e[0m\n"
	/bin/echo -e "\e[1;32mMasukan Kata Sandi ROOT Dalam 5..4..3..2..1..\e[0m"
	sleep 5

	passwd
}

Pase-2.2-Memperbaharui_Pemasangan() {
	pacman -Syu
	pacman -S archlinux-keyring
}

Pase-2.3-Pemasangan_Utilitas_Berkas() {
	# pacman -S acpid acpi acpi_call
	pacman -S e2fsprogs btrfs-progs dosfstools exfatprogs f2fs-tools ntfs-3g mtools gvfs gvfs-smb efivar efitools efibootmgr grub grub-btrfs os-prober
}

Pase-2.4-Pemasangan_Driver_Jaringan() {
	pacman -S networkmanager network-manager-applet avahi dialog wpa_supplicant nfs-utils inetutils dnsutils dnsmasq vde2 openbsd-netcat iptables-nft ipset firewalld nss-mdns bluez bluez-utils aria2 openssh shadowsocks simple-obfs android-tools net-tools
}

Pase-2.5-Pemasangan_Driver_Grafis() {
	pacman -S mesa lib32-mesa xf86-video-amdgpu vulkan-radeon lib32-vulkan-radeon amdvlk lib32-amdvlk libva-mesa-driver lib32-libva-mesa-driver mesa-vdpau lib32-mesa-vdpau
}

Pase-2.6-Pemasangan_Driver_Suara() {
	pacman -S alsa-utils pipewire pipewire-alsa pipewire-pulse pipewire-audio pipewire-media-session pipewire-jack noise-suppression-for-voice
}

Pase-2.7-Pemasangan_Utilitas_Virtualisasi() {
	pacman -S libvirt virt-manager edk2-ovmf bridge-utils make fakeroot
}

Pase-2.8a-Pemasangan_Opsional_AUR() {
	git clone https://aur.archlinux.org/yay.git
	cd yay
	makepkg -si
	cd ..
}

Pase-2.8b-Pemasangan_Opsional_AUR_Firmware() {
	yay -S mkinitcpio-firmware
	yay -S aic94xx-firmware
	yay -S wd719x-firmware
	yay -S upd72020x
}

Pase-2.8c-Pemasangan_Opsional_AUR_Utilitas() {
	pacman -S cpupower
	systemctl enable cpupower
	yay -S zenpower3-dkms
	yay -S asusctl
	systemctl enable asusd
	yay -S lact
	systemctl enable lactd
	yay -S cpupower-gui
	yay -S otpclient
}


Pase-2.9-Menghidupkan_Systemctl() {
	systemctl enable NetworkManager
	systemctl enable bluetooth
	# systemctl enable acpid
	# systemctl enable cups.service
	# systemctl enable sshd
	# systemctl enable avahi-daemon
	# systemctl enable tlp
	# systemctl enable reflector.timer
	# systemctl enable fstrim.timer
	systemctl enable libvirtd
	systemctl enable firewalld
}

Pase-2.10-Sekedar_Saran() {
	/bin/echo -e "\e[1;32m-------------= Sekedar Saran =-------------\e[0m\n"
	sleep 1
	/bin/echo -e "\e[1;32mCopy Semua Config Ke Sistem Sekarang\e[0m\n"
	sleep 1
	/bin/echo -e "\e[1;32m>> cp -r Config/etc/* /etc/\e[0m\n"
}

Pase-2.11-Pemasangan_GRUB() {
	mkinitcpio -P
	grub-install --target=x86_64-efi --efi-directory=/boot --bootloader-id=Archlinux --removable
	grub-mkconfig -o /boot/grub/grub.cfg
}

Pase-2.12-Membuat_User() {
	useradd -m sadereksatia
	usermod -aG wheel sadereksatia
	usermod -aG libvirt sadereksatia

	#printf "\e[1;32mMasukan Kata Sandi USER\e[0m\n"
	/bin/echo -e "\e[1;32mMasukan Kata Sandi USER Dalam 5..4..3..2..1..\e[0m"
	sleep 5
	passwd sadereksatia

	/bin/echo -e "\e[1;32mHarap Ubah Autentikasi USER Dengan Grup WHEEL Dalam 5..4..3..2..1..\e[0m"
	sleep 5
	nano /etc/sudoers
	# Ganti menggunakan whell >> echo "sadereksatia ALL=(ALL) ALL" >> /etc/sudoers.d/sadereksatia
	printf "\e[1;32mDone! Type exit, umount -a and reboot.\e[0m"
}
